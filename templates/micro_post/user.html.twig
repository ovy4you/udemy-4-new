{% extends 'base.html.twig' %}

{% block body %}
    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    {{ user.fullName }}
                    <small class="text-muted">Â· @{{ user.username }}</small>

                    {% if user !=app.user %}
                        {% if user.followers.contains(app.user) == false %}
                            <a href="{{ path('following_follow',{'id':user.id}) }}" class="btn">Follow</a>
                        {% else %}
                            <a href="{{ path('following_unfollow',{'id':user.id}) }}" class="btn">UnFollow</a>
                        {% endif %}
                    {% endif %}
                </h5>
            </div>
        </div>
    </div>

    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5>Followers</h5>
            </div>
            <ul class="list-group list-group-flush">
                {% for follower in user.followers %}
                    <li class="list-group-item">
                        <a href="{{ path('micro_post_user',
                            {'id': follower.id}) }}">
                            @{{ follower.username }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="card">
            <div class="card-body">
                <h5>Following</h5>
            </div>
            <ul class="list-group list-group-flush">
                {% for following in user.following %}
                    <li class="list-group-item">
                        <a href="{{ path('micro_post_user',
                            {'id': following.id}) }}">
                            @{{ following.username }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    {{ include ('micro_post/partial/menu.html.twig') }}
    {% for post in posts %}
        {{ include ('micro_post/partial/post.html.twig',{'post':post}) }}

        <small class="d-block text-right mt-3">
            {% if is_granted('edit', post) %}
                <a href="{{ path('micro_post_edit', {'id': post.id}) }}">Edit</a>
            {% endif %}
            {% if is_granted('delete', post) %}
                <a href="{{ path('micro_post_delete', {'id': post.id}) }}">Delete</a>
            {% endif %}
        </small>
    {% endfor %}
{% endblock %}