{% extends 'base.html.twig' %}

{% block title %}Hello MicroPostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">{{ include ('micro_post/partial/menu.html.twig') }}
        {% for message in app.flashes('notice') %}
            {{ message }}
        {% endfor %}
        {% for post in posts %}
            {{  include ('micro_post/partial/post.html.twig',{'post':post}) }}
        {% endfor %}

        <a href="{{ path('micro_post_add') }}">add micropost</a>
    </div>
{% endblock %}
